{
  "name": "basic-testing",
  "version": "1.0.0",
  "description": "Task for mastering unit-tests with Jest, Node.js and Typescript",
  "author": "AlreadyBored",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "main": "src/Service/index.ts",
  "scripts": {
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "eslint \"src/**/*.ts\" --fix",
